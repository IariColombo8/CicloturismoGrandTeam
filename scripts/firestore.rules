rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Inscripciones collection - allow public write for registrations
    match /inscripciones/{inscripcionId} {
      // Anyone can create inscriptions
      allow create: if request.auth == null || request.auth != null;
      
      // Only authenticated admins can read, update, or delete
      allow read, update, delete: if request.auth != null 
                                   && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Counters collection - needed for auto-incrementing inscription numbers
    match /counters/{counterId} {
      // Allow anyone to read and update counters (needed for inscription numbering)
      allow read, write: if true;
    }
    
    // Admins collection - only admins can read
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.uid == adminId;
      allow write: if false; // Admins must be added manually in Firebase Console
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
